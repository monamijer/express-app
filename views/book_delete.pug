extends layout

block content

  h1 #{title}: #{book.title}

  if bookinstance.length
    p #[strong Delete the following bookinstances before attempting to delete the book.]
    div(style='margin-top:20px;margin-left:20px')
      h4 BookInstances
      dl 
        each val in bookinstance
          dt 
            a(href=val.url) #{val.book.title}
          dd #{val.imprint} -&nbsp;
  else 
    p Do you really want to delete this book ?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookId', value=book._id)
      button.btn.btn-danger(type='submit') Delete
      button.btn.mx-2.btn-light(href='/catalog/books') Cancel
