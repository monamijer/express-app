extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_books.length
    p #[strong Delete the following books before attempting to delete this em genre.]
    div(style='margin-top:20px;margin-left:20px')
      h4 Books
      dl 
        each book in genre_books
          dt 
            a(href=book.url) #{book.title}
          dd #{book.summary}
  else
    p Do you really want to delete this genre ?

    form(method='POST')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreId', value=genre._id)
      button.btn.btn-danger(type='submit') Delete
      button.btn.mx-2.btn-light(href='/catalog/genres') Cancel
